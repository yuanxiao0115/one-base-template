{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.js",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "node_modules",
    "dist"
  ]
}
